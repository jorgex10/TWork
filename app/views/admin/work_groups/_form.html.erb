<%= form_for [:admin, @work_group] do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:"form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class:"form-control description-group" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit class:"btn btn-primary" %>
  </div>
  <br>
<% end %>